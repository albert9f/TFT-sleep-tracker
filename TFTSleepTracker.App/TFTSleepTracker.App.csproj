<Project Sdk="Microsoft.NET.Sdk">

  <ItemGroup>
    <ProjectReference Include="..\TFTSleepTracker.Core\TFTSleepTracker.Core.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
    
    <!-- Application metadata for Squirrel packaging -->
    <AssemblyName>TFTSleepTracker</AssemblyName>
    <Version>1.0.1</Version>
    <Authors>albert9f</Authors>
    <Company>TFT Sleep Tracker</Company>
    <Product>TFT Sleep Tracker</Product>
    <Description>Sleep tracking application for monitoring system idle time</Description>
    <Copyright>Copyright Â© 2025</Copyright>
    
    <!-- Application icon -->
    <ApplicationIcon>app.ico</ApplicationIcon>
  </PropertyGroup>
  
  <ItemGroup>
    <Content Include="app.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
